<%= link_to area_lines_path(@line.area) do %>
  <i class="fa-solid fa-arrow-left-long"></i>
<% end %>

<h1><%= @line.name %></h1>

<%= @line.grade %>
<%= @line.category %>
<%= @line.description %>
<br><br>

<% if @line.photo.attached? %>
  <%= cl_image_tag @line.photo.key, width: 500, crop: :fill %>
<% else %>
  <p>No picture available</p>
<% end %>
<br>

<%= link_to "Log Climb", new_line_climb_path(@line), class: "btn btn-main" %>
<%= link_to "Leave Tip", new_line_tip_path(@line), class: "btn btn-main" %>
<br>

<h3>Tips for this route</h3>

<% if user_signed_in? %>
  <%= render "tips/tip_section", tips: @tips %>
<% else %>
  <p><%= link_to "Sign in", new_user_session_path %> to view tips left by other climbers on this route!</p>
<% end %>

<%= link_to "Back to routes in #{@line.area.name}", area_lines_path(@line.area) %>
