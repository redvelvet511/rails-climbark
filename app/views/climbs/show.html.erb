<div class="show-log-climb-box">
  <div class="arrow-and-title">
    <%= link_to(climbs_path) do %>
      <i class="fa-solid fa-arrow-left-long"></i>
    <% end %>
    <p class="log-climb-name"><%= @climb.line.name %></p>
  </div>

  <p>Description: <%= @climb.description %></p>
  <p>Status: <%= @climb.status %></p>
  <p>Date completed: <%= @climb.completion_date %></p>

  <%= link_to(edit_climb_path(@climb)) do %>
    <i class="fa-solid fa-square-pen"></i>
  <% end %>
  <%= link_to(climb_path(@climb), data: {turbo_method: :delete, turbo_confirm: "Delete this tip?"} ) do %>
    <i class="fa-solid fa-square-minus"></i>
  <% end %>
</div>
