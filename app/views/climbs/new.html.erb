<% if @line.photo.attached? %>
  <% url = cl_image_path(@line.photo.key) %>
<% else %>
  <% url = image_path("line_placeholder.jpg") %>
<% end %>

<div class="line-details-container" style="background-image:url(<%= url %>)" data-controller="line-photo">
  <div class="log-climb-box">
    <div class="button-and-route">
      <%= link_to line_path(@line) do %>
        <i class="fa-solid fa-arrow-left-long"></i>
      <% end %>
      <p class="log-climb-route">Log a climb for <%= @line.name %> route</p>
    </div>

    <%= simple_form_for [@line, @climb] do |f| %>
      <%= f.input :description %>
      <%= f.input :status, as: :select, collection: Climb::STATUSES.map { |s| [s.capitalize, s] } %>
      <%# f.input :photo, as: :file %>
      <%= f.input :climb_date, as: :date, html5: true %>
      <%= f.submit class: "btn btn-custom-thin submit-climb-button"%>
    <% end %>
  </div>
</div>
